---
// ContactForm.astro
---

<section class="flex justify-center items-center py-12 bg-gray-100">
  <div class="bg-white shadow-md rounded-2xl p-8 w-full max-w-3xl">
    <!-- Title -->
    <h2 class="text-2xl font-semibold mb-6 text-left text-gray-800">
      Contact Us
    </h2>

    <form class="space-y-6">
      <!-- Row of inputs -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <input
          type="text"
          placeholder="Your Name"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400"
        />
        <input
          type="email"
          placeholder="Your Email"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400"
        />
        <input
          type="tel"
          placeholder="Your Phone"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400"
        />
      </div>

      <!-- Textarea -->
      <textarea
        rows="4"
        placeholder="Your Message"
        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-1 focus:ring-gray-400"
      ></textarea>

      <!-- Button -->
      <button
        type="submit"
        class="relative overflow-hidden px-6 py-2 rounded-lg font-medium text-white bg-[#C5A249] border border-[#C5A249] transition-all duration-300 group"
      >
        <span
          class="absolute left-0 top-0 h-full w-0 bg-white transition-all duration-300 group-hover:w-full"
        ></span>
        <span
          class="relative z-10 group-hover:text-[#C5A249]"
        >
          Send Email
        </span>
      </button>
    </form>
  </div>
</section>
