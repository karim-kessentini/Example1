---
import logo from "../assets/logos/logo.png";
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();
---

<footer
  class="bg-white text-black py-10 font-roboto"
  style="box-shadow: 0 -3px 12px rgba(0,0,0,0.03);"
>
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Column 1 -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-[#1B3942] font-italiana">
          California Residence
        </h3>
        <div class="mx-auto">
          <img src={logo.src} alt="Logo" class="h-[65px]" />
        </div>
      </div>

      <!-- Column 2 -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-[#1B3942] font-italiana">
          Visit Us
        </h3>
        <ul class="space-y-2">
          <li>
            <a href="#" class="hover:underline"
              >1234 Sunset Blvd, Los Angeles, CA 90026, United States</a
            >
          </li>
          <li>
            <a href="tel:+12067410340" class="hover:underline"
              >+1 206-741-0340</a
            >
          </li>
        </ul>
      </div>

      <!-- Column 3 -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-[#1B3942] font-italiana">
          Working Hours
        </h3>
        <ul class="space-y-2">
          <li><a href="#" class="hover:underline">Monday – Friday</a></li>
          <li><a href="#" class="hover:underline">09:00 am – 09:00 pm</a></li>
          <li>
            <a href="#" class="hover:underline">Saturday – Sunday – Closed</a>
          </li>
        </ul>
      </div>

      <!-- Column 4 -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-[#1B3942] font-italiana">
          Quick Links
        </h3>
        <ul class="space-y-2">
          <li>
            <a href="/contact" class="hover:underline">Contact</a>
          </li>
          <li>
            <a href="/home-valuation" class="hover:underline"
              >Property Valuation</a
            >
          </li>
          <li>
            <a href="#blog" class="hover:underline">Blog</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="border-t border-gray-300 mt-10 pt-6 text-center text-sm text-gray-500 flex justify-between items-center flex-col md:flex-row md:gap-0 gap-4"
    >
      <div>
        © {currentYear} California Residence · Website by
        <a href="https://youragency.com" class="hover:underline">EasyListings</a
        >
      </div>
      <div class="flex gap-3">
        <a
          href="#facebook"
          class="group rounded-full border border-black flex justify-center items-center p-1 hover:border-[#94792f] transition-colors duration-200 w-8 h-8"
        >
          <Icon
            name="facebook"
            size={18}
            class="text-black transition-colors duration-200 group-hover:text-[#94792f]"
          />
        </a>
        <a
          href="#x"
          class="group rounded-full border border-black flex justify-center items-center p-1 hover:border-[#94792f] transition-colors duration-200 w-8 h-8"
        >
          <Icon
            name="x"
            size={18}
            class="text-black transition-colors duration-200 group-hover:text-[#94792f]"
          />
        </a>
        <a
          href="#instagram"
          class="group rounded-full border border-black flex justify-center items-center p-1 hover:border-[#94792f] transition-colors duration-200 w-8 h-8"
        >
          <Icon
            name="instagram"
            size={18}
            class="text-black transition-colors duration-200 group-hover:text-[#94792f]"
          />
        </a>
        <a
          href="#linkedin"
          class="group rounded-full border border-black flex justify-center items-center p-1 hover:border-[#94792f] transition-colors duration-200 w-8 h-8"
        >
          <Icon
            name="linkedin"
            size={18}
            class="text-black transition-colors duration-200 group-hover:text-[#94792f]"
          />
        </a>
      </div>
    </div>
  </div>
</footer>
